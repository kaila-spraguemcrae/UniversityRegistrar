@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h2>Please confirm you would like to delete this Student:</h2>

@Html.DisplayFor(model => model.Name) | Enrollment Date: @Html.DisplayFor(model => model.EnrollmentDate)
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" />
}

<p>@Html.ActionLink("Back to Student Details", "Details", new { id = Model.StudentId })</p>